{
  "name": "internet-apps-portfolio",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=api",
    "dev:backend": "npm run watch --workspace=api",
    "dev:frontend": "npm run dev --workspace=todo-vue",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:init": "npm run db:init --workspace=api"
  }
}
